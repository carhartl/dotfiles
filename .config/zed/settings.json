// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette
{
  "active_pane_modifiers": {
    "inactive_opacity": 0.8
  },
  "agent": {
    "default_profile": "ask",
    "inline_assistant_model": {
      "model": "claude-3-7-sonnet-latest",
      "provider": "zed.dev"
    },
    "default_model": {
      "model": "gpt-5-codex",
      "provider": "copilot_chat"
    }
  },
  "auto_install_extensions": {
    "commment": true,
    "dockerfile": true,
    "github-theme": true,
    "golangci-lint": true,
    "html": true,
    "ruby": true,
    "ruff": true,
    "terraform": true,
    "tokyo-night": true,
    "toml": true
  },
  "buffer_font_family": "Monaspace Neon",
  "buffer_font_features": {
    "calt": true,
    "liga": true,
    "ss01": true,
    "ss02": true,
    "ss03": true,
    "ss05": true,
    "ss06": true,
    "ss07": true,
    "ss08": true,
    "ss09": true
  },
  "buffer_font_size": 16,
  "collaboration_panel": {
    "button": false
  },
  "edit_predictions": {
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false,
    "mode": "subtle"
  },
  "file_types": {
    "Dockerfile": ["Dockerfile*"]
  },
  "git": {
    "blame": {
      "show_avatar": true
    }
  },
  "git_panel": {
    "default_width": 550
  },
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "inlay_hints": {
    "enabled": true
  },
  "languages": {
    "JavaScript": {
      "formatter": [
        {
          "code_action": "source.fixAll.eslint"
        },
        {
          "external": {
            "arguments": ["--stdin-filepath", "{buffer_path}", "--no-semi"],
            "command": "prettier"
          }
        }
      ]
    },
    "Markdown": {
      "format_on_save": "on"
    },
    "Python": {
      "code_actions_on_format": {
        "source.fixAll.ruff": true,
        "source.organizeImports.ruff": true
      }
    },
    "Shell Script": {
      "formatter": {
        "external": {
          "arguments": ["--filename", "{buffer_path}"],
          "command": "shfmt"
        }
      },
      "format_on_save": "on"
    },
    "Terraform": {
      "prettier": { "allowed": false }
    }
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lint": {
            "select": ["B", "E", "F", "I", "SIM", "UP"]
          }
        }
      }
    },
    "terraform-ls": {
      "initialization_options": {
        "experimentalFeatures": {
          "prefillRequiredFields": true
        }
      }
    }
  },
  "minimap": {
    "current_line_highlight": "gutter",
    "show": "always",
    "thumb_border": "none"
  },
  "outline_panel": {
    "default_width": 450
  },
  "preferred_line_length": 120,
  "prettier": {
    "allowed": true
  },
  "preview_tabs": {
    "enable_preview_from_code_navigation": true
  },
  "profiles": {
    "Personal": {},
    "Work": {
      "features": {
        "edit_prediction_provider": "copilot"
      }
    }
  },
  "project_panel": {
    "default_width": 450,
    "git_status": true,
    "sticky_scroll": true
  },
  "scrollbar": {
    "show": "system"
  },
  "show_whitespaces": "boundary",
  "soft_wrap": "editor_width",
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "terminal": {
    "copy_on_select": true,
    "default_height": 500
  },
  "theme": {
    "dark": "Github Light",
    "light": "Github Light"
  },
  "theme_overrides": {
    "Github Light": {
      "syntax": {
        "constant.comment.todo": {
          "color": "#9a6700ff",
          "font_style": "italic"
        },
        "property.comment.error": {
          "color": "#d1242fff",
          "font_style": "italic"
        },
        "string.comment.info": {
          "color": "#59636eff",
          "font_style": "italic"
        }
      }
    }
  },
  "title_bar": {
    "show_branch_icon": true
  },
  "ui_font_size": 16,
  "use_smartcase_search": true,
  "use_system_window_tabs": true,
  "wrap_guides": [120]
}
