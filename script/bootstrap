#!/usr/bin/env bash

set -e

echo "Bootstrapping"

cd "$(dirname "$0")/.."

# First of all install homebrew
./setup/homebrew.sh 2>&1
eval "$(/opt/homebrew/bin/brew shellenv)"
brew update

# Install global homebrew packages
brew bundle --global

# Find installers and run them iteratively
find ./setup -iname "*.sh" | while read -r installer ; do sh -c "${installer}" ; done
